import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        // Prompt the user to enter a string
        System.out.print("Enter a string: ");
        String str = input.nextLine();

        // Prompt the user to enter a character
        System.out.print("Enter a character: ");
        char a = input.next().charAt(0);

        // Call the count method and display the result
        int occurrences = count(str, a);
        System.out.println("The character '" + a + "' occurs " + occurrences + " times in the string.");

        input.close();
    }

    // Return the number of occurrences of character 'a' in the string 'str'
    public static int count(String str, char a) {
        int count = 0;

        for (int i = 0; i < str.length(); i++) {
            if (str.charAt(i) == a) {
                count++;
            }
        }

        return count;
    }
}

